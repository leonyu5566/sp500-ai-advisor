{
  "bindings": [
    {
      "authLevel": "anonymous",          #/* 無須 API Key, 前端可直接呼叫 */
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "route": "callGemini",
      "methods": ["post", "options"]     #/* ← 必加 options，讓瀏覽器預檢不 405 */
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    }
  ],
  "scriptFile": "index.js"
}

